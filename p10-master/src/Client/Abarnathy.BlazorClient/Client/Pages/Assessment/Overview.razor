@page "/assessment"

<div class="container">

    <div class="row d-flex justify-content-center">
        <h2 class="mb-4 mt-4">Assessment Criteria</h2>
    </div>

    <div class="row d-flex justify-content-center">
        <p class="text-muted">Showing the least amount of trigger terms per risk level.</p>
    </div>

    <div class="row d-flex justify-content-center">

        <div class="col-8">

            <table class="table table-striped table-hover table-sm">

                <thead>
                <tr>
                    <th style="visibility: hidden;"></th>
                    <th class="text-center" scope="col" colspan="2">Under 30</th>
                    <th class="text-center" scope="col" colspan="2">Over 30</th>
                </tr>
                <tr>
                    <th style="visibility: hidden;"></th>
                    <th class="text-center" scope="col">Male</th>
                    <th class="text-center" scope="col">Female</th>
                    <th class="text-center" scope="col">Male</th>
                    <th class="text-center" scope="col">Female</th>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <th scope="row">Early Onset</th>
                    <td class="text-center">≥ 5</td>
                    <td class="text-center">≥ 7</td>
                    <td class="text-center">≥ 8</td>
                    <td class="text-center">≥ 8</td>
                </tr>
                <tr>
                    <th scope="row">In Danger</th>
                    <td class="text-center">≥ 3</td>
                    <td class="text-center">≥ 4</td>
                    <td class="text-center">≥ 6</td>
                    <td class="text-center">≥ 6</td>
                </tr>
                <tr>
                    <th scope="row">Borderline</th>
                    <td class="text-center">N/A</td>
                    <td class="text-center">N/A</td>
                    <td class="text-center">≥ 2</td>
                    <td class="text-center">≥ 2</td>
                </tr>
                <tr>
                    <th scope="row">None</th>
                    <td class="text-center">≤ 1</td>
                    <td class="text-center">≤ 1</td>
                    <td class="text-center">≤ 1</td>
                    <td class="text-center">≤ 1</td>
                </tr>

                </tbody>

            </table>
        </div>

    </div>

</div>